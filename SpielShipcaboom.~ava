// Hilfsmethode: Ziel setzen und Buttons deaktivieren
private void zielSetzen(JButton btn) {
    if (playerTargetName == null) {
        playerTargetName = btn.getName();
        btn.setBackground(Color.GREEN);
        gameStarted = true;
        JOptionPane.showMessageDialog(this, "Dein Ziel ist gesetzt! Jetzt kannst du links angreifen.");
    }
}

// Computer greift an (Buttons 25ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â€šÂ¬Ã…â€œ49)
private void computerTurn() {

    // Array mit den Buttons des Spielers (25ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â‚¬Å¡Ã‚Â¬ÃƒÂ¢Ã¢â€šÂ¬Ã…â€œ49)
    JButton[] buttons = {
        bX25, bX26, bX27, bX28, bX29, bX30, bX31, bX32, bX33, bX34,
        bX35, bX36, bX37, bX38, bX39, bX40, bX41, bX42, bX43, bX44,
        bX45, bX46, bX47, bX48, bX49
    };

    // Erzeuge ein Random-Objekt, um zufÃƒÆ’Ã‚Â¤llige Zahlen zu generieren
    Random r = new Random();

    // Variable fÃƒÆ’Ã‚Â¼r den ausgewÃƒÆ’Ã‚Â¤hlten Button
    JButton target = null;

    // Solange kein aktiver (enabled) Button gefunden wurde:
    while (target == null) {
        // WÃƒÆ’Ã‚Â¤hle eine zufÃƒÆ’Ã‚Â¤llige Zahl zwischen 0 und 24
        int i = r.nextInt(buttons.length);

        // Wenn der Button noch aktiviert ist (nicht schon angeklickt)
        if (buttons[i].isEnabled()) {
            // WÃƒÆ’Ã‚Â¤hle diesen Button als Ziel
            target = buttons[i];
        } 
        // Wenn nicht: Schleife wiederholt sich, bis ein gÃƒÆ’Ã‚Â¼ltiger Button gefunden ist
    }

    // Wenn der Button der Zielname des Spielers ist (= Treffer!)
    if (target.getName().equals(playerTargetName)) {
        target.setText("Treffer!");          // Text auf dem Button ÃƒÆ’Ã‚Â¤ndern
        target.setBackground(Color.RED);     // Button rot fÃƒÆ’Ã‚Â¤rben (Trefferfarbe)
        JOptionPane.showMessageDialog(this, "Computer trifft! Du hast verloren!");
        gameStarted = false;                 // Spiel beenden              // Alle Buttons deaktivieren
    } else {
        target.setText("Daneben");           // Kein Treffer ÃƒÆ’Ã‚Â¢ÃƒÂ¢Ã¢â€šÂ¬Ã‚Â ÃƒÂ¢Ã¢â€šÂ¬Ã¢â€žÂ¢ Text anzeigen
        target.setBackground(Color.BLUE);    // Button blau fÃƒÆ’Ã‚Â¤rben (verfehlt)
    }

    // Ziel-Button deaktivieren, damit er nicht nochmal gewÃƒÆ’Ã‚Â¤hlt wird
    target.setEnabled(false);
}


