  // Methoden
  // start methods
  private String hideMyCaboom() {
    Random random = new Random();
    int randomNumber = random.nextInt(25); 
    return "Bidk" + randomNumber;
  }

  private void feldCheck(JButton bXZahlName, String targetName, boolean isPlayer) {
    if (bXZahlName.getName().equals(targetName)) {
        bXZahlName.setText("Treffer!");
        bXZahlName.setBackground(Color.RED);
        bXZahlName.setEnabled(false);
        if (isPlayer) {
            JOptionPane.showMessageDialog(this, "Treffer! Du hast gewonnen!");
        } else {
            JOptionPane.showMessageDialog(this, "Computer trifft! Du hast verloren!");
        }
        gameStarted = false;
       } else {
        bXZahlName.setText("Daneben");
        bXZahlName.setBackground(Color.BLUE);
        bXZahlName.setEnabled(false);
    }
}

